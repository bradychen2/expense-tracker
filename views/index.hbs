  <div class="row justify-content-center">
    <ul class="list-group col-6 d-flex flex-row justify-content-between">
      <div class="row justify-content-between">
        {{#each records}}
        <div class="col-12 d-flex flex-nowrap justify-content-between">
          <li class="list-group-item w-75 d-flex justify-content-between">
            <div class="d-flex">
              <i class="fas fa-utensils fs-2"></i>
              <div>
                <div class="">
                  {{this.name}}
