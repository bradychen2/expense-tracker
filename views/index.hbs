<div class="fluid-container row justify-content-center main-container">
  {{!-- Dropdown List --}}
  <div class="dropdown-container col-6 px-1 mx-1 mt-4 row justify-content-start">
    <div class="btn-group col-9 p-0 mx-0 d-flex justify-content-between">
      <button type="button" class="btn btn-secondary px-1 w-75 text-start">請選擇類別</button>
      <button type="button" class="btn btn-secondary btn-sm px-0 text-center dropdown-toggle dropdown-toggle-split"
        id="dropdownMenuReference" data-bs-toggle="dropdown" aria-expanded="false" data-bs-reference="parent">
        <span class="visually-hidden text-end">Toggle Dropdown</span>
      </button>
      <ul class="dropdown-menu w-100" aria-labelledby="dropdownMenuReference">
        <li><a class="dropdown-item" href="/">
            所有類型
          </a></li>
        <li><a class="dropdown-item" href="/records/filter/housing" value="housing">
            家庭物業
          </a></li>
        <li><a class="dropdown-item" href="/records/filter/transportation" value="transportation">
            交通出行
          </a></li>
        <li><a class="dropdown-item" href="/records/filter/entertainment" value="entertainment">
            休閒娛樂
          </a></li>
        <li><a class="dropdown-item" href="/records/filter/food" value="food">
            餐飲食品
          </a></li>
        <li><a class="dropdown-item" href="/records/filter/other" value="other">
            其他
          </a></li>
      </ul>
    </div>
  </div>

  {{!-- Total Amount --}}
  <div class="row my-2 justify-content-center">
    <div class="col-6 mx-0 px-0 d-flex justify-content-start">
      <div class="total-amount">
        總金額:
      </div>
      <h1 class="mx-3 total-amount" id="total-amount">
        {{totalAmount}}
      </h1>
    </div>
  </div>

  {{!-- Record List --}}
  <div class="row justify-content-center">
    <ul class="list-group row col-md-6 d-flex flex-row justify-content-center">
      {{#each records}}
      <div class="col-sm-10 col-md-12 d-flex flex-nowrap justify-content-center list-item-container">
        <li class="list-group-item w-75 my-1 {{this.category}}">
          <a class="list-item-link d-flex align-items-center justify-content-between" href="/records/edit/{{this._id}}">
            <div class="d-flex align-items-center justify-content-evenly">
              {{{displayIcon this}}}
              <div class="mx-2">
                <div class="">{{this.name}}</div>
                <div class="" id="date-display">{{formatTime this.date}}</div>
              </div>
            </div>
            <div>
              {{this.amount}}
            </div>
          </a>
          <div class="d-flex justify-content-end button-group">
            <a class="btn btn-success btn-sm mx-1 my-1" href="/records/edit/{{this._id}}">修改</a>
            <form action="/records/{{this._id}}/?_method=DELETE" method="POST">
              <button class="btn btn-danger btn-sm my-1">刪除</button>
            </form>
          </div>
        </li>
      </div>
      {{/each}}
    </ul>
  </div>
  {{!-- Create new record --}}
  <p class="col-5 col-md-3 mt-3 row justify-content-start">
    <a href="/records/new" class="btn btn-primary col-5 col-md-8 row justify-content-center">新增支出</a>
  </p>
</div>